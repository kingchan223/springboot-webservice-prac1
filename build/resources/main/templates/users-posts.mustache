{{>layout/header}}
<span class="d-inline-flex p-2">
    <h1 class="text-success">{{author}}</h1>
    <h1 > 의 글 보기</h1>
</span>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
        </div>
    </div>
    <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>작성자</th>
            <th>게시글번호</th>
            <th>제목</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#authors}} <!-- java의 for와 같은 문법. posts라는 List를 순회한다. -->
        <tr>
            <td><a  href="/users/posts/{{author}}">{{author}}</a></td>
            <td><a href="/posts/update/{{id}}">{{id}}</a></td> <!-- List에서 뽑아낸 객체의 ID필드를 사용 -->
            <td><a href="/posts/update/{{id}}">{{title}}</a></td><!-- List에서 뽑아낸 객체의 title 필드를 사용 -->
        </tr>
        {{/authors}} <!--posts 순회가 끝나는 부분. -->
        </tbody>
    </table>
</div>
{{>layout/footer}}
